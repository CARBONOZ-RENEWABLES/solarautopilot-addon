            function calculateDailyValues(loadData, pvData, batteryChargedData, batteryDischargedData, gridUsedData, gridExportedData) {
                const dailyResults = {
                    load: [],
                    pv: [],
                    batteryCharged: [],
                    batteryDischarged: [],
                    gridUsed: [],
                    gridExported: []
                };
                
                // Ensure all arrays have the same length
