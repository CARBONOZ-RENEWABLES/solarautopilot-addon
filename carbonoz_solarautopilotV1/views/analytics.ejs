    // PDF Export functions
    function exportTableToPDF(tableId, title, filename) {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();
        
        doc.setFontSize(20);
        doc.text('CARBONOZ SolarAutopilot', 20, 30);
        
        doc.setFontSize(16);
        doc.text(title, 20, 45);
        
        doc.setFontSize(12);
        doc.text(`Generated: ${new Date().toLocaleDateString()}`, 20, 55);
        
        const table = document.getElementById(tableId);
        if (table) {
            const tableData = [];
            const rows = table.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const rowData = [];
                cells.forEach(cell => {
                    rowData.push(cell.textContent.trim().replace(/ (kg|kWh)$/, ''));
                });
                if (rowData.length > 0) tableData.push(rowData);
            });
            
            const headers = [];
            const headerCells = table.querySelectorAll('thead th');
            headerCells.forEach(cell => {
                headers.push(cell.textContent.trim());
            });
            
            doc.autoTable({
                head: [headers],
                body: tableData,
                startY: 70,
                styles: { fontSize: 8 },
                headStyles: { fillColor: [222, 175, 11] }
            });
        }
        
        doc.save(filename);
    }
    
    // PDF Export event listeners
    document.getElementById('last30days-pdf-download').addEventListener('click', function(e) {
